@using LetsGame.Common.Data.Entities.Events

<MudGrid Class="h-100 hide-scroll rounded" Style="overflow-y: auto">
    @foreach (var ev in Events)
    {        
        <MudItem xs="12" lg="6">
            <MudCard Square="true">
                <MudCardMedia Image="http://localhost:5226/images/default-profile-pictures/default-profile-pic-3.jpg" Height="200" />
                <MudCardContent>
                    <MudStack Row="true" Justify="Justify.SpaceBetween">
                        <MudText Typo="Typo.h5">@ev.Title</MudText>
                        <MudMenu AnchorOrigin="Origin.BottomRight" TransformOrigin="Origin.TopRight">
                            <ActivatorContent>
                                <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Style="padding: 6px; margin-right: -6px;"/>
                            </ActivatorContent>
                            <ChildContent>
                                <MudMenuItem>Invite Friend</MudMenuItem>
                                <MudMenuItem>Leave Event</MudMenuItem>
                            </ChildContent>
                        </MudMenu>
                    </MudStack>
                    <MudText Typo="Typo.overline">@ev.StartDate?.ToString("dd MMMM yyyy")</MudText>
                    <MudText Typo="Typo.body2">@ev.Description.ClampLength(120, true)</MudText>
                    <LGAvatarStack Attendees="@ev.Attendees" Dense="true" Max="3" Class="mt-3" />
                </MudCardContent>
            </MudCard>
        </MudItem>        
    }
</MudGrid>

@code {
    [Parameter]
    public IQueryable<LGEventView> Events { get; set; }
}
