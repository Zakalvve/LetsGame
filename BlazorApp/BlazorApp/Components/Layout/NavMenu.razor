
<MudNavMenu>
    <MudNavLink Href="/dashboard" Icon="@Icons.Material.Filled.Dashboard">Dashboard</MudNavLink>
    <MudNavLink Href="/events" Icon="@Icons.Material.Filled.Event">Events</MudNavLink>
    <MudNavLink OnClick="UpdateRightSidebarState" Icon="@Icons.Material.Filled.People">Friends</MudNavLink>
    <MudNavLink OnClick="UpdateRightSidebarState" Icon="@Icons.Material.Filled.Mail">Messages</MudNavLink>
</MudNavMenu>

@code {
    [Parameter]
    public bool RightSidebarExpanded { get; set; }

    [Parameter]
    public EventCallback<bool> RightSidebarExpandedChanged { get; set; }

    private async Task UpdateRightSidebarState()
    {
        await RightSidebarExpandedChanged.InvokeAsync(!RightSidebarExpanded);
    }
}
